<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ghelidworks.android.mydictionarylite">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NounTestActivity"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".ListNounActivity"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".NewNounActivity"
            android:parentActivityName=".ListNounActivity"></activity>
        <activity android:name=".NounPagerActivity"
            android:parentActivityName=".ListNounActivity"></activity>
        <activity android:name=".ListVerbActivity"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".NewVerbActivity"
            android:parentActivityName=".ListVerbActivity"></activity>
    </application>

</manifest>